set nocompatible              " be iMproved, required
filetype off                  " required
set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()
  Plugin 'VundleVim/Vundle.vim'
  Plugin 'iamcco/markdown-preview.nvim'
  Plugin 'vim-scripts/AnsiEsc.vim'
call vundle#end()
" filetype plugin indent on
" filetype plugin on

syntax off
set tabstop=4
set noic
set mouse=r " set mouse=a
set showcmd
set showmatch
set ruler
set rulerformat=%l,%v
set statusline+=%L
set encoding=utf8
set nomodeline
set noautoindent
map <F2> :AnsiEsc<CR>
nnoremap <Left> u
nnoremap 1 1ddzt<c-G>
nnoremap 2 2ddzt<c-G>
nnoremap 3 3ddzt<c-G>
nnoremap 4 4ddzt<c-G>
nnoremap 5 5ddzt<c-G>
nnoremap 6 6ddzt<c-G>
nnoremap 7 7ddzt<c-G>
nnoremap 8 8ddzt<c-G>
nnoremap 9 9ddzt<c-G>

colorscheme slate
"blue      default  desert   evening   koehler  murphy  peachpuff  ron    slate  zellner
"darkblue  delek    elflord  industry  morning  pablo   shine  torte

autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
setlocal comments-=://
let g:mkdp_auto_start = 1
let g:mkdp_auto_open = 1
let g:mkdp_auto_close = 1
let g:mkdp_browser = "/bin/google-chrome"
let g:mkdp_path_to_chrome = "/bin/google-chrome"
