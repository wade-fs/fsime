<com.wade.fsime.InputContainer
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
>
  <LinearLayout
    android:id="@+id/main_input_plane"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
  >
    <com.wade.fsime.CandidatesView
      android:id="@+id/candidates_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height__candidate_button"
      android:background="@color/candidate_button_fill"
    />
    <com.wade.fsime.KeyboardView
      android:id="@+id/keyboard_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    />
  </LinearLayout>
</com.wade.fsime.InputContainer>
