<resources>
  <style
    name="Theme.StrokeInput"
    parent="Theme.MaterialComponents.Light.DarkActionBar"
  >
    <!-- Base -->
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textColorHint">@color/umbrella_grey</item>
    <item name="android:windowBackground">@color/very_dark_grey</item>
    <!-- Primary -->
    <item name="colorPrimary">@color/umbrella_yellow</item>
    <item name="colorPrimaryVariant">@color/yellow</item>
    <item name="colorOnPrimary">@android:color/black</item>
    <!-- Secondary -->
    <item name="colorSecondary">@color/umbrella_orange</item>
    <item name="colorSecondaryVariant">@color/orange</item>
    <item name="colorOnSecondary">@android:color/black</item>
    <!-- Components -->
    <item name="editTextStyle">@style/StrokeInputText</item>
    <item name="toolbarStyle">@style/StrokeInputToolbar</item>
  </style>
</resources>
